
<div class="form">


  <%= simple_form_for(@dream) do |f| %>
    <div>
      <%= f.label :name , class:"label_new"%>
      <%= f.text_field :name, placeholder: "Select a name", class:"input_new"%>
    </div>

     <div>
    <%= f.label :description, class:"label_new" %>
    <%= f.text_field :description, placeholder: "Select a description", class:"input_new" %>
     </div>

     <div>
      <%= f.label :price, class:"label_new" %>
      <%= f.text_field :price, placeholder: "Which price ?", class:"input_new" %>
     </div>

     <div>
      <%= f.label :transpiration_level, class:"label_new" %>
      <%= f.text_field :transpiration_level, as: :radio_buttons, placeholder: "How intense is it?", class:"input_new" %>
     </div>

     <div>
      <%= f.label :category, class:"label_new" %>
      <%= f.input :category, collection: @select_choice.to_set, label: false %>
     </div>

     <div>
      <%= f.label :photo, class:"label_new" %>
     </div>

     <div class="custom-file">
       <input type="file" class="custom-file-input" id="inputGroupFile01">
       <label class="custom-file-label" for="inputGroupFile01">Select a picture</label>
    </div>

     <div>
      <%= f.submit class:'btn-submit' %>
     </div>


  <% end %>
</div>
      <div class="back_btn">
       <%= link_to 'Back', dreams_path , class:"btn-ghost-small"%>
     </div>





