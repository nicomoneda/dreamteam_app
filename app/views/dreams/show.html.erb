  <div class="container">
    <% if @dream.photo.present? %>
      <%= image_tag @dream.photo.key, class: "avatar-image"%>
    <% else %>
      <%= image_tag "poster_1.png", class: "avatar-image"%>
    <% end %>

    <div>
      <h1 class="dream_name"> <%= @dream.name %> </h1>
      <p class="dream_category"><%= @dream.category %></p>
    </div>

    <div class="dream-details">
      <p class="dream_price"><%= @dream.price %></p>
      <%= image_tag "plume.png", alt: 'plume', class: "plume" %>
      <p class="dream_transpiration_level"><%= @dream.transpiration_level %></p>
    </div>

    <p class="dream_description"><%= @dream.description %></p>

    <div class="form-wrapper" style="width: 400px; margin: 0 auto;">
      <h2>Book a dream</h2>
      <%= simple_form_for [@dream, @booking], method: "post" do |f| %>
        <%= f.input :date, as: :string, required: false, input_html: {class: "datepicker"} %>
        <%= f.button :submit, "Go", class: "btn btn-primary" %>
      <% end %>
    </div>

    <%= link_to 'Back', dreams_path, class: "btn-ghost-small" %>
</div>

